              <td><%= form.text_field :date, :size =>"10" %></td>
              <td><%= form.text_field :product_name, :size =>"10" %></td>
              <td><%= form.text_field :sales_amount, :size =>"10" %></td>
              <td><%= form.text_field :customize_cost, :size =>"10" %></td>           
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<% end %>
