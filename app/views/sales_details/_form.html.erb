<%= form_with(model: sales_detail, local: true) do |form| %>
  <% if sales_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sales_detail.errors.count, "error") %> prohibited this sales_detail from being saved:</h2>

      <ul>
      <% sales_detail.errors.full_messages.each do |message| %>
