      <%if(params.has_key?(:id))%>
        <%= link_to 'キャンセル', sales_detail_path, :class=> 'btn btn-link ' %>
      <%else%>
        <%= link_to 'キャンセル', use_case_path(id: params[:use_case_id]), :class=> 'btn btn-link ' %>
      <%end%>
    </div>
    <div class="actions ">
      <!--passing param to controller for makeing association-->
      <%= hidden_field_tag(:use_case_no, @sales_detail.use_case_no) %>
